@{
    ViewData["Title"] = "Biblioteca App";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
          

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Bine ati venit</h1>
                <p class="lead">Acesta este index-ul proiectului</p>
                
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-4" align="center">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Carti</h5>
                        <p class="card-text">Detalii pentru cartile din biblioteca</p>
                        <a href="/Carti" class="btn btn-secondary">Detalii carti</a>
                    </div>
                </div>
            </div>
            
                <div class="col-md-4" align="center">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Autori</h5>
                            <p class="card-text">Detalii pentru autorii din biblioteca</p>
                            <a href="/Autori" class="btn btn-secondary">Detalii autori</a>
                        </div>
                    </div>
                </div>
                
                    <div class="col-md-4" align="center" >
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Categorii</h5>
                        <p class="card-text">Detalii pentru categoriile din biblioteca</p>
                                <a href="/Categorii" class="btn btn-secondary">Detalii categorii</a>
                            </div>
                        </div>
                    </div>
<p></p>
            <div class="col-md-6" align="center">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Imprumuturi</h5>
                        <p class="card-text">Detalii pentru imprumuturile facute</p>
                        <a href="/Imprumuturi" class="btn btn-secondary">Detalii imprumuturi</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6" align="center">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Utilizatori</h5>
                        <p class="card-text">Detalii pentru utilizatorii bibliotecii</p>
                        <a href="/Utilizatori" class="btn btn-secondary">Detalii utilizatori</a>
                    </div>
                </div>
            </div>
        </>
    </div>
    </div>
   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
