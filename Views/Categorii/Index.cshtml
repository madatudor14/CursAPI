@model IEnumerable<LibraryProject.Models.Categorii>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary ">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeCategorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeCategorie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCategorie">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCategorie">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCategorie">Delete</a>
            </td>
        </tr>
}
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </tbody>

</table>
