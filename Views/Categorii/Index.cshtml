@model IEnumerable<LibraryProject.Models.Categorii>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary ">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeCategorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeCategorie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCategorie">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCategorie">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCategorie">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
